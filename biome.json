{
	"$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "off",
				"noUnusedImports": "error"
			},
			"style": {
				"useConst": "error"
			},
			"complexity": {
				"useOptionalChain": "warn"
			},
			"suspicious": {
				"useIterableCallbackReturn": "off",
				"noAssignInExpressions": "off"
			}
		}
	},
	"javascript": {},
	"files": {
		"includes": ["**/*.js", "**/*.json"]
	}
}
